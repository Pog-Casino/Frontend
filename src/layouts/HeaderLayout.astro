---
import BaseLayout from "./BaseLayout.astro";
import Header from "../components/Header.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---
<BaseLayout title={title}>
    <div id="page-root">
        <Header />
        <main>
            <slot />
        </main>
    </div>
</BaseLayout>

<style>
    #page-root {
        height: 100vh;
        width: 100%;
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
    }

    main {
        flex: 1 1 0;
    }
</style>