---
import BaseLayout from '../layouts/BaseLayout.astro';
import GameCard from '../components/GameCard.astro';
---

<BaseLayout title="POG.CASINO">
	<main>
		<section id="logo">
			<h1>POG<wbr/><span>.</span>CASINO</h1>
		</section>
		<section id="content">
			<h2>Play one of our statistical games, completely free of charge:</h2>
			<div>
				<GameCard title="Crash" url="/crash" comingSoon={false} image={"/placeholder_300x300.png"} />
				<GameCard title="Plinko" url="/plinko" comingSoon={true} image={"/placeholder_300x300.png"} />
				<GameCard title="Bingo" url="/bingo" comingSoon={true} image={"/placeholder_300x300.png"} />
			</div>
		</section>
	</main>
</BaseLayout>

<style>
	main {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		min-height: 100vh;
		width: 100vw;
		margin-left: 4rem;
		margin-right: 4rem;
		box-sizing: border-box;
	}

	section {
		display: flex;
		flex-direction: column;
		width: 100%;
		align-items: center;
	}

	main #logo {
		flex-basis: 35vh;
	}

	main #logo > h1 {
		box-decoration-break: clone;
		text-align: center;
		font-size: 8rem;
		font-weight: 900;
		margin-top: 6rem;
		user-select: none;
		background-color: var(--sub-color);
		border-radius: 0.1rem;
	}

	@media only screen and (max-width: 600px) {
		main #logo > h1 {
			font-size: 6rem;
		}
	}

	main #logo > h1 > span {
		color: var(--main-color);
	}

	main #content {
		margin-top: auto;
		flex-grow: 1;
	}

	main #content > h2 {
		text-align: center;
		font-size: 4rem;
		font-weight: 800;
	}

	hr {
		margin-top: 1.5rem;
		margin-bottom: 1.5rem;
		background-color: var(--sub-color);
		height: 1px;
		width: 70%;
	}

	main #content > div {
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		gap: 4rem;
		margin: 4rem;
		justify-content: center;
        align-items: center;
	}
</style>