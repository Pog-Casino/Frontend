---
import HeaderLayout from "../layouts/HeaderLayout.astro";
import Chat from "../components/Chat.astro";
---
<HeaderLayout title="Crash Game on pog.casino">
    <div id="crash">
        <div id="game">

        </div>

        <div id="sidebar">
            <div id="order-manager">
                <button x-data x-on:click="$store.account.balance += 1000">Moneten</button>
            </div>
            <div id="chat">
                <Chat roomId="crash-chat" />
            </div>
        </div>
    </div>
</HeaderLayout>

<style>
    #crash {
        display: flex;
        flex-direction: row;
        width: 100%;
        height: 100%;
        padding: 1rem;
        padding-top: 0;
        box-sizing: border-box;
    }

    #crash > #game {
        flex: 0.66 0.66 0;
        box-sizing: border-box;
    }

    #crash > #sidebar {
        display: flex;
        flex-direction: column;
        flex: 0.33 0.33 0;
        box-sizing: border-box;
        align-items: stretch;
    }

    #crash > #sidebar > #order-manager {
        flex: 0.5 0.5 0;
        box-sizing: border-box;
    }

    #crash > #sidebar > #chat {
        flex: 0.5 0.5 0;
        box-sizing: border-box;
    }
</style>